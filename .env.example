# Chat App Backend Environment Variables

# 應用設定
GIN_MODE=debug
SERVER_PORT=8080
SERVER_BASE_URL=http://localhost
TIMEZONE=Asia/Taipei
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 資料庫設定
MONGO_URI=mongodb://localhost:27017/chat_app
MONGO_USERNAME=your_username
MONGO_PASSWORD=your_password
MONGO_DB_NAME=chat_app
MONGO_AUTH_SOURCE=admin

# Redis 設定
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT 設定 (請使用強密碼)
JWT_ACCESS_SECRET=your-super-secure-jwt-access-secret-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-change-this-in-production
JWT_ACCESS_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# 檔案上傳設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif