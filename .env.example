################## Docker 環境設定 ##################
# 選擇目標環境 (dev/prod)
DOCKER_TARGET=dev
# 環境名稱 (development/production)
ENV=development

# 資源限制
CPU_LIMIT=2
MEMORY_LIMIT=1G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

# Go Runtime 調校
GOMEMLIMIT=900MiB
GOMAXPROCS=2

################## Go應用設定 ##################

# 套件設定
GIN_MODE=debug

# 應用設定
SERVER_MODE=development
SERVER_MAIN_DOMAIN=localhost
SERVER_PORT=80
SERVER_BASE_URL=http://localhost
TIMEZONE=Asia/Taipei
ALLOWED_ORIGINS=
TRUSTED_PROXIES=127.0.0.1,::1,172.16.0.0/12,10.0.0.0/8,192.168.0.0/16

# Token設定
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_HOURS=72

# 資料庫設定 (連接外部服務)
MONGO_URI=mongodb://root:example@host.docker.internal:27017/chat_app?authSource=admin
MONGO_USERNAME=root
MONGO_PASSWORD=example
MONGO_DB_NAME=chat_app
MONGO_AUTH_SOURCE=admin

# Redis設定 (連接外部服務)
REDIS_ADDR=host.docker.internal:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 設定
JWT_ACCESS_SECRET=your-secret-key
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_ACCESS_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# 檔案上傳設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Health check
HEALTH_CHECK_URL=http://localhost:80/health
