# Chat App Backend Environment Variables - Docker

# 應用設定
GIN_MODE=release
SERVER_PORT=8080
SERVER_BASE_URL=http://localhost
TIMEZONE=Asia/Taipei
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173,chrome-extension://

# 資料庫設定 (Docker 內部)
MONGO_URI=mongodb://admin:password123@mongodb:27017/chat_app?authSource=admin
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DB_NAME=chat_app
MONGO_AUTH_SOURCE=admin

# Redis 設定 (Docker 內部)
REDIS_ADDR=redis:6379
REDIS_PASSWORD=redis123

# JWT 設定
JWT_ACCESS_SECRET=docker-development-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=docker-development-jwt-refresh-secret-change-in-production
JWT_ACCESS_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# 檔案上傳設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
